{
    "name": "koenvanmeijeren/koenavel",
    "authors": [
        {
            "name": "Koen van Meijeren",
            "role": "developer"
        }
    ],
    "autoload": {
        "psr-4": {
            "App\\": "App/"
        }
    },
    "require": {
        "defuse/php-encryption": "^2.2",
        "paragonie/anti-csrf": "^2.2",
        "monolog/monolog": "^2.0",
        "siriusphp/upload": "^2.1",
        "php": "^7.3",
        "cakephp/chronos": "^1.2",
        "kminek/email-obfuscator": "^1.0",
        "filp/whoops": "^2.5",
        "ext-intl": "*",
        "ext-json": "*",
        "ext-pdo": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^8.3",
        "friendsofphp/php-cs-fixer": "^2.15",
        "phpstan/phpstan": "^0.11.7",
        "squizlabs/php_codesniffer": "^3.2",
        "php-coveralls/php-coveralls": "^2.1",
        "thecodingmachine/phpstan-strict-rules": "^0.11.2",
        "vimeo/psalm": "^3.5",
        "nunomaduro/phpinsights": "^1.9",
        "phploc/phploc": "^5.0",
        "sebastian/phpcpd": "^4.1",
        "povils/phpmnd": "^2.1",
        "bmitch/churn-php": "^1.0"
    },
    "scripts": {
        "phpunit": "phpunit",
        "phpstan": "phpstan analyse directory -c phpstan.neon --level=7",
        "psalm": "psalm",
        "cs-fix": "phpcbf directory/",
        "cs-check": "phpcs directory/",
        "statistics-code-check": "phploc directory/",
        "duplicated-code-check": "phpcpd directory/",
        "magic-number-check": "phpmnd directory/",
        "refactor-code-check": "churn directory/",
        "rector-see-diff-first": "vendor/bin/rector process directory/ --dry-run"}
}
